{{- $pages := .Site.RegularPages -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\"?>" | safeHTML }}
<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#" xmlns="http://purl.org/rss/1.0/" xmlns:dc="http://purl.org/dc/elements/1.1/">
  <channel rdf:about="{{ .Permalink }}rss1.xml">
    <title>{{ .Site.Title }}</title>
    <link>{{ .Permalink }}</link>
    <items>
      <rdf:Seq>
        {{ range first 15 $pages }}
        <rdf:li rdf:resource="{{ .Permalink }}" />
        {{ end }}
      </rdf:Seq>
    </items>
  </channel>
  {{ range first 15 $pages }}
  <item rdf:about="{{ .Permalink }}">
    <title>{{ .Title }}</title>
    <link>{{ .Permalink }}</link>
    <dc:date>{{ .Date.Format "2006-01-02T15:04:05Z" | safeHTML }}</dc:date>
  </item>
  {{ end }}
</rdf:RDF>